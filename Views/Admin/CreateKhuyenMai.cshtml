@model Final_APP.Entities.KhuyenMai

@{
    ViewBag.Title = "CreateKhuyenMai";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Thêm khuyến mãi</h2>

@using (Html.BeginForm())
{
